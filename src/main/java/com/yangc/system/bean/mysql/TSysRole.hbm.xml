<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yangc.system.bean.TSysRole" table="T_SYS_ROLE">
		<comment>角色表</comment>
		<id name="id" type="java.lang.Long">
			<column name="ID" precision="22" scale="0" />
			<generator class="identity" />
		</id>
		<property name="roleName" type="java.lang.String">
			<column name="ROLE_NAME" length="200">
				<comment>角色名称</comment>
			</column>
		</property>
		<property name="createUser" type="java.lang.Long">
			<column name="CREATE_USER" precision="22" scale="0">
				<comment>创建者</comment>
			</column>
		</property>
		<property name="createTime" type="java.util.Date">
			<column name="CREATE_TIME" length="7">
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="updateUser" type="java.lang.Long">
			<column name="UPDATE_USER" precision="22" scale="0">
				<comment>修改者</comment>
			</column>
		</property>
		<property name="updateTime" type="java.util.Date">
			<column name="UPDATE_TIME" length="7">
				<comment>修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>
